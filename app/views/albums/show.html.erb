<div class="container-album-show">
  <div>
     <%= link_to event_path(@event) do %>
      <i class="fa-solid fa-circle-arrow-left icon-show-event"></i>
    <% end %>
  </div>

  <div class="container-album link m-3">
    <h1 class="text-center">Album de <%= @album.event.name %></h1>
    <%= link_to "Ajouter des mÃ©dias", edit_event_album_path(@album.event, @album), class: "btn-invitation" %>
  </div>

  <div>
    <% if @album.media.attached? %>
      <div class="image-grid-container">
        <ul class="image-grid">
          <% @album.media.each do |media| %>
            <li class="image-item">
              <%= image_tag media %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>