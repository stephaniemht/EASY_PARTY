<h1><strong>Items List</strong></h1>

<div class="container mt-5">
  <% if @items.any?%>
    <table class="table table-hover align-middle items" id="items">
      <thead>
        <tr>
          <th class="col">ID</th>
          <th class="col">CONTENT</th>
          <th class="col">USER</th>

        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% @items.each_with_index do |item, index| %>
          <tr>
            <td scope="row"><%= index + 1 %></td>
            <td><%= item.content %></td>
            <td><%= item.user_id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "Ajouter un item", new_event_item_path(@event), class: "btn btn-primary" %>
  <% else %>
    <p>L'organisateur se charge des courses !!!! Remerciez-le bande de Rats 🐀</p>
  <% end %>

  <%= link_to "Revenir à l'évènement", @event, class: "btn btn-primary" %>
</div>
  
