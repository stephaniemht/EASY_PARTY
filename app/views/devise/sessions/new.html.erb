<div class="container-login mt-5">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
    <h2 class="signup">Log In</h2>


    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { class: "form--input", placeholder: "Email", autocomplete: "email" } %>

      <%= f.input :password,
                  required: false,
                  input_html: { class: "form--input", placeholder: "Password", autocomplete: "current-password" } %>

      <%= f.input :remember_me, as: :boolean, input_html: { class: "checkbox" } if devise_mapping.rememberable? %>
    </div>


    <div class="form-actions">
      <%= f.button :submit, "Log-in", class: "form--submit" %>
    </div>


  <%= render "devise/shared/links" %>
</div>
  <% end %>
