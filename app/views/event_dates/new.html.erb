<h1>Ajouter des dates pour <%= @event.name %></h1>

<%= simple_form_for([@event, @event.event_dates.build], url: event_event_dates_path(@event), method: :post) do |form| %>
  <div class="form-group">
    <%= form.label :date, "Ajouter une date unique" %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :proposed_date, "Ajouter une date pour un sondage" %>
    <%= form.date_field :proposed_date, class: "form-control" %>
    
  <%= form.submit "Ajouter les dates", class: "btn btn-primary" %>
<% end %>